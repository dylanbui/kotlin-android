<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:paddingLeft="5dp"
    android:paddingTop="5dp"
    android:paddingRight="5dp"
    android:paddingBottom="5dp">

    <ImageView
        android:id="@+id/ivImage1"
        android:layout_width="54dp"
        android:layout_height="54dp"

        android:layout_alignParentTop="true"
        android:layout_marginRight="10dp"
        android:src="@color/black"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toRightOf="@id/ivImage1"
        android:layout_alignTop="@id/ivImage1"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tvText1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/blue_300"
            android:text="This should be correct answer! Not just because only one LinearLayout is used, but when you are inflating DialogFragment with needed layout design(some views should be on the bottom)"
            />

        <View
            android:id="@+id/vLine"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="@color/black"

            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            />

        <TextView
            android:id="@+id/tvText2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/brown_300"
            android:text="Hoi cai gi dau khong a"

            android:gravity="bottom|center_horizontal"

            />


    </LinearLayout>





</RelativeLayout>