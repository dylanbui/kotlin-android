    <LinearLayout
        android:layout_centerInParent="true"
        android:background="@drawable/border"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        tools:ignore="UselessParent">


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="2dp">

            <com.dylanbui.android_library.ui_control.hint_spinner.DbSpinner
                android:id="@+id/dbspinner"
                style="@style/Widget.AppCompat.Spinner.Underlined"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:spinnerMode="dropdown"
                android:dropDownVerticalOffset="55dp"
                app:dbspinner_hintText="-- Select me nowwww --"
                app:dbspinner_hintTextColor="@color/blue_text_color" />

            <ImageView
                android:id="@+id/dbms_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|center_vertical"
                android:contentDescription="aaa"
                android:tint="@color/dodgerBlue"
                android:src="@drawable/ic_baseline_arrow_drop_down_24" />
        </FrameLayout>

