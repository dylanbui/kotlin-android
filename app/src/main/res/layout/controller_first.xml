<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/btnFirst"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Show Control" />

    <Button
        android:id="@+id/btnNextControl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:text="Next Control" />

    <Button
        android:id="@+id/btnSave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:text="Save" />

    <EditText
        android:id="@+id/addr_edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="top|left"
        android:inputType="textEmailAddress|textMultiLine"
        android:lines="20"
        android:minLines="5"
        android:scrollHorizontally="false"
        android:scrollbars="vertical" />


    <com.tiper.MaterialSpinner
        android:id="@+id/material_spinner_2"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:prompt="@string/app_name"
        android:textColor="#0ff"
        tools:text="lalala" />


    <io.pravikant.materialspinner.MaterialSpinner
        android:id="@+id/main_occupation"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:ms_text_size="@dimen/text_size_15"
        app:ms_hint="Occupation asd" />

    <LinearLayout
        android:layout_centerInParent="true"
        android:background="@drawable/border"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="UselessParent">

        <com.dylanbui.android_library.ui_control.hint_spinner.DbSpinner
            android:id="@+id/dbspinner"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:spinnerMode="dropdown"
            android:background="@null"
            android:dropDownVerticalOffset="40dp"
            app:dbspinner_hintTextColor="@color/blue_text_color"
            app:dbspinner_hintText="--- Select --- tu toi ne" />

    </LinearLayout>


    <Spinner
        android:id="@+id/spnOptions"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@null"
        android:dropDownVerticalOffset="55dp"
        android:spinnerMode="dropdown" />

    <pyxis.uzuki.live.hintablespinner.HintableSpinner
        android:id="@+id/hintablespinner"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        app:hintable_hintText="--- Select ---"
        app:hintable_hintTextColor="@color/blue_text_color"/>







</LinearLayout>
