<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.dylanbui.android_library.ui_control.hint_spinner.DbSpinner
            android:id="@+id/dbms_spinner"
            style="@style/Widget.AppCompat.Spinner.Underlined"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="3dp"
            android:background="@null"
            android:spinnerMode="dropdown"
            app:dbspinner_hintText="?attr/dbmyms_hint_text"
            app:dbspinner_hintTextColor="?attr/dbmyms_hint_color" />

        <ImageView
            android:id="@+id/dbms_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center_vertical"
            android:layout_marginRight="3dp"
            android:contentDescription=""
            android:tint="@color/dodgerBlue"
            android:src="@drawable/ic_baseline_arrow_drop_down_24" />

        <ImageView
            android:id="@+id/dbms_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_gravity="bottom"
            android:background="@color/dodgerBlue"
            android:contentDescription="" />
    </FrameLayout>


</LinearLayout>